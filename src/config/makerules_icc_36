# IBM Visualage C++ 3.6

.SUFFIXES: .res .rc .obj .asm .c .cpp

MFLAGS     = -nologo
MDUMMY     =

OBJ        = .obj
CO         = .obj
LBI        = .lib
LBO        = .lib
RES        = .res

CC         = icc
CFLAGS     = -Ss -Q -Gm -W3 -Wuse+ -DOS2 -DTCPV40HDRS
CFLAGS_DLL = -Ge- -DLL
CFLAGS_DBG = -Ti
CFLAGS_MEM = -Tm
CFLAGS_OPT = -Gf -Gi -O -G5 -Gl

CL         = ilink
LFLAGS     = /NOL /NOE
LFLAGS_DLL = /DLL
LFLAGS_PM  = /PM:PM
LFLAGS_IO  = /PM:VIO
LFLAGS_DBG = /DEB
LFLAGS_OPT = /PACKC /PACKD /OPTF /EXEP:2
LFLAGS_OUT = /OUT:
LDEF_PREFX =
LDEF_SUFFX = _icc.def
LOBJ_PREFX =
LOBJ_SUFFX =

AS         = nasm
AFLAGS     = -fobj

LB         = ilib  /nofree /nobackup /quiet /nologo /noi
LBENDL     = ;

LI         = implib /nologo /noi

RC         = rc
RFLAGS     = -n

LIBS_TCP   = so32dll.lib tcp32dll.lib
LIBS_MM    = mmpm2.lib

INCLUDE    = $(INCDIR);$(INCLUDE)

!ifdef EXE_PM
LFLAGS = $(LFLAGS) $(LFLAGS_PM)
!endif
!ifdef EXE_IO
LFLAGS = $(LFLAGS) $(LFLAGS_IO)
!endif

!ifdef DEBUG
CFLAGS = $(CFLAGS) $(CFLAGS_DBG)
LFLAGS = $(LFLAGS) $(LFLAGS_DBG)
MFLAGS = $(MFLAGS) DEBUG=Yes
!else
CFLAGS = $(CFLAGS) $(CFLAGS_OPT)
LFLAGS = $(LFLAGS) $(LFLAGS_OPT)
!endif

!ifdef DEBUG_ALLOC
CFLAGS = $(CFLAGS) $(CFLAGS_MEM)
MFLAGS = $(MFLAGS) DEBUG_ALLOC=Yes
!endif

!ifdef DLL
CFLAGS = $(CFLAGS) $(CFLAGS_DLL)
LFLAGS = $(LFLAGS) $(LFLAGS_DLL)
!endif

.c.obj:
	$(CC) $(CFLAGS) -c $<

.cpp.obj:
	$(CC) $(CFLAGS) -c $<

.rc.res:
	$(RC) $(RFLAGS) -r $<

.asm.obj:
	$(AS) $(AFLAGS) $<
