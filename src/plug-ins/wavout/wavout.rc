        CONTROL "WAV Output for PM123 (C) 2000 Samuel Audet" ID_NULL, 10, 25, 160, 8, WC_STATIC, SS_TEXT | DT_CENTER | DT_VCENTER | DT_MNEMONIC | WS_VISIBLE
            PRESPARAMS PP_FOREGROUNDCOLOR , 0x0L

        DEFPUSHBUTTON "~OK", DID_OK, 5, 5, 25, 13, WS_GROUP | WS_TABSTOP
        PUSHBUTTON "~Cancel", DID_CANCEL, 35, 5, 32, 13
    END
