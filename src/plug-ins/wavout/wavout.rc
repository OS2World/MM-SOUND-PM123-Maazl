    BEGIN
        LTEXT "WAV Directory", ST_FILENAME, 2, 41, 50, 8
        ENTRYFIELD "", EF_FILENAME,55,41,100,8, ES_LEFT | ES_AUTOSCROLL | ES_MARGIN
