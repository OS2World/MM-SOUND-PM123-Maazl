#include <os2.h>
#include "wavout.h"
#include <utilfct.h>

DLGTEMPLATE DLG_CONFIGURE
{
  DIALOG "WAVE Output", DLG_CONFIGURE, -100, -20, 200, 96, FS_NOBYTEALIGN|FS_MOUSEALIGN|FS_SIZEBORDER,
         FCF_TITLEBAR | FCF_SYSMENU | FCF_CLOSEBUTTON
    PRESPARAMS MAKE_PPU_SIZE_CONSTR(180, 96, 0, 0)
  {
    CONTROL " Output ~directory ", ST_FILENAME, 5, 69, 190, 24, WC_STATIC,
        SS_GROUPBOX | DT_LEFT | DT_TOP | DT_MNEMONIC | WS_VISIBLE | WS_GROUP
      PRESPARAMS PP_FONTNAMESIZE "8.Helv"
      PRESPARAMS MAKE_PPU_RESIZE_INFO(0,1,0,1, 1,1,0,1)
    ENTRYFIELD "", EF_FILENAME, 12, 74, 153, 8,
        ES_LEFT | ES_AUTOSCROLL | ES_MARGIN
      CTLDATA 8, 256, 0, 0
      PRESPARAMS MAKE_PPU_RESIZE_INFO(0,1,0,1, 1,1,0,1)
    PUSHBUTTON "...", PB_BROWSE, 170, 72, 20, 12
      PRESPARAMS MAKE_PPU_RESIZE_INFO(1,1,0,1, 0,1,0,1)
    CONTROL " Naming ~scheme ", ST_NAMING, 5, 31, 190, 32, WC_STATIC,
        SS_GROUPBOX | DT_LEFT | DT_TOP | DT_MNEMONIC | WS_VISIBLE | WS_GROUP
      PRESPARAMS PP_FONTNAMESIZE "8.Helv"
      PRESPARAMS MAKE_PPU_RESIZE_INFO(0,1,0,1, 1,1,0,1)
    AUTORADIOBUTTON "Source file name", RB_SOURCEFILE, 12, 46, 178, 8
    AUTORADIOBUTTON "Timestamp", RB_TIMESTAMP, 12, 36, 178, 8
    CONTROL "(C) 2000 Samuel Audet",
        ST_ABOUT1, 70, 20, 90, 8, WC_STATIC,
        SS_TEXT | DT_VCENTER | WS_VISIBLE | DT_LEFT
      PRESPARAMS PP_FOREGROUNDCOLORINDEX, SYSCLR_MENUTEXT
    CONTROL "(C) 2006 Dmitry A.Steklenev",
        ST_ABOUT2, 70, 12, 90, 8, WC_STATIC,
        SS_TEXT | DT_VCENTER | WS_VISIBLE | DT_LEFT
      PRESPARAMS PP_FOREGROUNDCOLORINDEX, SYSCLR_MENUTEXT
    CONTROL "(C) 2013 Marcel Mueller",
        ST_ABOUT3, 70, 4, 90, 8, WC_STATIC,
        SS_TEXT | DT_VCENTER | WS_VISIBLE | DT_LEFT
      PRESPARAMS PP_FOREGROUNDCOLORINDEX, SYSCLR_MENUTEXT
    DEFPUSHBUTTON "~OK", DID_OK, 12, 4, 50, 12, WS_GROUP | WS_TABSTOP
  }
}

DLGTEMPLATE DLG_BROWSE
{
  DIALOG "", DLG_BROWSE, 0, 0, 244, 130,
         FS_NOBYTEALIGN | FS_SIZEBORDER | WS_SAVEBITS | WS_VISIBLE,
         FCF_TITLEBAR | FCF_SYSMENU | FCF_CLOSEBUTTON
         PRESPARAMS PP_FONTNAMESIZE "8.Helv"
  {
     CONTROL "~Volume", DID_DRIVE_TXT, 8, 118, 100, 8, WC_STATIC,
             SS_TEXT | DT_LEFT | DT_VCENTER | DT_MNEMONIC | WS_VISIBLE
     CONTROL "", DID_DRIVE_CB, 8, 52, 226, 64, WC_COMBOBOX,
             CBS_DROPDOWNLIST | WS_VISIBLE | WS_GROUP | WS_TABSTOP
       PRESPARAMS MAKE_PPU_RESIZE_INFO(0,1,1,1, 1,1,0,1)
     CONTROL "~Directory", DID_DIRECTORY_TXT, 8, 96, 100, 8, WC_STATIC,
             SS_TEXT | DT_LEFT | DT_VCENTER | DT_MNEMONIC | WS_VISIBLE
     CONTROL "", DID_DIRECTORY_LB, 8, 24, 226, 68, WC_LISTBOX,
             LS_NOADJUSTPOS | LS_HORZSCROLL | LS_OWNERDRAW | WS_GROUP | WS_TABSTOP | WS_VISIBLE
             PRESPARAMS MAKE_PPU_RESIZE_INFO(0,1,0,1, 1,1,1,1)
     CONTROL "~OK", DID_OK, 0, 6, 38, 12, WC_BUTTON,
             BS_PUSHBUTTON | BS_DEFAULT | WS_GROUP | WS_TABSTOP | WS_VISIBLE
     CONTROL "~Cancel", DID_CANCEL, 56, 4, 38, 12, WC_BUTTON,
             BS_PUSHBUTTON | WS_TABSTOP | WS_VISIBLE

     // This is invisible controls don't used via directory selection
     CONTROL "", DID_FILENAME_TXT, 0, 0, 0, 0, WC_STATIC, SS_TEXT | DT_LEFT | DT_TOP | DT_MNEMONIC
     CONTROL "", DID_FILENAME_ED,  0, 0, 0, 0, WC_ENTRYFIELD, ES_MARGIN
     CONTROL "", DID_FILTER_TXT,   0, 0, 0, 0, WC_STATIC, SS_TEXT | DT_LEFT | DT_TOP | DT_MNEMONIC
     CONTROL "", DID_FILTER_CB,    0, 0, 0, 0, WC_COMBOBOX, CBS_DROPDOWNLIST
     CONTROL "", DID_FILES_TXT,    0, 0, 0, 0, WC_STATIC, SS_TEXT | DT_LEFT | DT_TOP | DT_MNEMONIC
     CONTROL "", DID_FILES_LB,     0, 0, 0, 0, WC_LISTBOX, LS_NOADJUSTPOS | LS_HORZSCROLL
  }
}

